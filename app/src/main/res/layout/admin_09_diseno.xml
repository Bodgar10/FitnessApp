<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_gravity="center"
        android:elevation="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/boton_redondo_blanco"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imgComida"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_imgnull" />

        <TextView
            android:id="@+id/txtTiempoComida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:padding="3dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:text="Desayuno" />


        <TextView
            android:id="@+id/txtNombreComida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:padding="2dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/negro"
            android:text="Huevos con tostadas  y verduras" />

    </LinearLayout>



</LinearLayout>