<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            android:elevation="10dp"
            android:theme="@style/Toolbar"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/txtGuardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="5dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="end"
                android:textStyle="bold"
                android:text="@string/siguiente"
                android:textAllCaps="true"
                android:textColor="@color/naranja"
                android:textSize="15sp" />


        </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:id="@+id/btnAgregarFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/boton_naranja_completo"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="@string/seleccionar_video"
                android:textColor="@color/blanco"
                android:textSize="14sp"
                android:textAllCaps="true" />

        </LinearLayout>


        <TextView
            android:id="@+id/txtprueba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text=""
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:padding="8dp"
            android:gravity="start"
            android:background="@android:color/darker_gray"
            android:text="@string/datos_del_ejercicio"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/edtNombreEjercicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:textSize="13sp"
            android:background="@drawable/boton_gris_margen"
            android:padding="10dp"
            android:textColor="@color/negro"
            android:hint="@string/nombre_ejercicio"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtRepeticiones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:textSize="13sp"
            android:background="@drawable/boton_gris_margen"
            android:padding="10dp"
            android:textColor="@color/negro"
            android:hint="@string/repeticiones"
            android:inputType="number" />



        <EditText
            android:id="@+id/edtRondas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:textSize="13sp"
            android:background="@drawable/boton_gris_margen"
            android:padding="10dp"
            android:textColor="@color/negro"
            android:hint="@string/rondas"
            android:inputType="number" />




        <LinearLayout
            android:visibility="gone"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_marginEnd="10dp"
                android:textAlignment="textEnd"
                android:text="Agregar otro ejercicio"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <ImageButton
                android:id="@+id/btnAgregarEjercicio"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_agregrar_iconocua"/>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:padding="8dp"
            android:gravity="start"
            android:background="@android:color/darker_gray"
            android:text="@string/demostraci_n_de_los_ejercicios"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="13sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/boton_naranja_contorno"
                android:gravity="center"
                android:orientation="vertical">



                <ImageButton
                    android:id="@+id/btnFoto1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@null"
                    android:tint="@color/naranja"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_agregar_iconore" />


                <TextView
                    android:id="@+id/txtQuit2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="@string/subir_foto"
                    android:textAllCaps="true"
                    android:textColor="@color/naranja"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/boton_naranja_contorno"
                android:gravity="center"
                android:orientation="vertical">


                <ImageButton
                    android:id="@+id/btnFoto2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@null"
                    android:tint="@color/naranja"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_agregar_iconore" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="@string/subir_foto"
                    android:textAllCaps="true"
                    android:textColor="@color/naranja"
                    android:textSize="12sp" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/boton_naranja_contorno"
                android:gravity="center"
                android:orientation="vertical">


                <ImageButton
                    android:id="@+id/btnFoto3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@null"
                    android:tint="@color/naranja"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_agregar_iconore" />


                <TextView
                    android:id="@+id/txtQuit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="@string/subir_foto"
                    android:textAllCaps="true"
                    android:textColor="@color/naranja"
                    android:textSize="12sp" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="160dp"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                android:gravity="center" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="160dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:layout_marginEnd="15dp"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                android:gravity="center" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="160dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:layout_marginEnd="15dp"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>