<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#4bdedede"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/azul"
            android:elevation="10dp"
            android:theme="@style/ToolbarAdmin"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            app:popupTheme="@style/AppTheme.PopupOverlay">

        </androidx.appcompat.widget.Toolbar>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="0dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Descripción de la asesoría"
                android:textAllCaps="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/boton_redondo_blanco"
                android:elevation="4dp"
                android:gravity="start"
                android:padding="5dp"
                android:inputType="textMultiLine"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Descripción de la rutina"
                android:textAllCaps="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtRutina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/boton_redondo_blanco"
                android:elevation="4dp"
                android:gravity="start"
                android:padding="5dp"
                android:inputType="textMultiLine"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Descripción de los alimentos"
                android:textAllCaps="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtAlimentos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/boton_redondo_blanco"
                android:elevation="4dp"
                android:gravity="start"
                android:padding="5dp"
                android:inputType="textMultiLine"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Costo promedio asesoría"
                android:textAllCaps="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtCosto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/boton_redondo_blanco"
                android:elevation="4dp"
                android:gravity="start"
                android:padding="5dp"
                android:inputType="numberDecimal"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="12sp" />




            <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/videoViewAsesoria"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:adjustViewBounds="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintBottom_toBottomOf="@+id/videoViewAsesoria"
                    app:layout_constraintEnd_toEndOf="@+id/videoViewAsesoria"
                    app:layout_constraintStart_toStartOf="@+id/videoViewAsesoria"
                    app:layout_constraintTop_toTopOf="@+id/videoViewAsesoria"
                    android:background="@drawable/boton_naranja_contorno"
                    android:orientation="vertical"/>

                <ImageView
                    android:id="@+id/imgVideo"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:scaleType="centerInside"
                    app:layout_constraintBottom_toBottomOf="@+id/videoViewAsesoria"
                    app:layout_constraintEnd_toEndOf="@+id/videoViewAsesoria"
                    app:layout_constraintStart_toStartOf="@+id/videoViewAsesoria"
                    app:layout_constraintTop_toTopOf="@+id/videoViewAsesoria"
                    app:layout_constraintVertical_bias="0.34"
                    app:srcCompat="@drawable/ic_agregrar_iconocua" />

                <TextView
                    android:id="@+id/txtVideoExplicativo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subir video explicativo"
                    android:textColor="@color/naranja"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/videoViewAsesoria"
                    app:layout_constraintEnd_toEndOf="@+id/videoViewAsesoria"
                    app:layout_constraintStart_toStartOf="@+id/videoViewAsesoria"
                    app:layout_constraintTop_toTopOf="@+id/videoViewAsesoria"
                    app:layout_constraintVertical_bias="0.721" />


            </androidx.constraintlayout.widget.ConstraintLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/boton_redondo_blanco"
                android:elevation="5dp"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/imgAsesoria"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:backgroundTint="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_imgnull" />




                <ImageView
                    android:id="@+id/imgRutina"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_imgnull" />

                <ImageView
                    android:id="@+id/imgAlimentos"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_imgnull" />




            </LinearLayout>


            <LinearLayout
                android:id="@+id/btnGuardarAsesoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/boton_naranja_completo"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="Guardar Asesoría"
                    android:textColor="@color/blanco"
                    android:textSize="14sp"
                    android:textAllCaps="true" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</androidx.core.widget.NestedScrollView>