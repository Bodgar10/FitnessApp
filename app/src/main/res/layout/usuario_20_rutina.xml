<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/negro"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            android:elevation="10dp"
            android:theme="@style/Toolbar"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            app:popupTheme="@style/AppTheme.PopupOverlay">


            <Switch
                android:id="@+id/switchEjercicio"
                android:layout_marginEnd="10dp"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Listo" />

        </androidx.appcompat.widget.Toolbar>

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imgRutina"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_imgnull" />


            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgRutina"
                app:layout_constraintEnd_toEndOf="@+id/imgRutina"
                app:layout_constraintStart_toStartOf="@+id/imgRutina"
                app:layout_constraintTop_toTopOf="@+id/imgRutina"
                android:layout_marginEnd="0dp"
                android:background="@drawable/degradado_imagen"
                android:orientation="vertical"/>

            <ImageView
                android:id="@+id/imgVideo"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toBottomOf="@+id/imgRutina"
                app:layout_constraintEnd_toEndOf="@+id/imgRutina"
                app:layout_constraintStart_toStartOf="@+id/imgRutina"
                app:layout_constraintTop_toTopOf="@+id/imgRutina"
                app:srcCompat="@drawable/ic_play_icono" />

        </androidx.constraintlayout.widget.ConstraintLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="@string/descripci_n"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:gravity="start"
        android:layout_marginTop="10dp"
        android:text="Texto descripciÃ³n"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/rutina_de_entrenamiento"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="16sp" />




    <include
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        layout="@layout/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </include>

        <TextView
            android:id="@+id/txtNombreEjercicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Nombre"
            android:textColor="@android:color/white"
            android:textSize="16sp" />


        <include
            android:id="@+id/recycler_viewImg"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            layout="@layout/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </include>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:gravity="center" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:gravity="center" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:layout_marginEnd="15dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:gravity="center" />

        </LinearLayout>



    </LinearLayout>


</androidx.core.widget.NestedScrollView>