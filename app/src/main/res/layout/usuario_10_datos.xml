<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#4bdedede"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@android:color/white"
        android:elevation="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="Formulario de registro"
            android:textAllCaps="false"
            android:textColor="@color/negro"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textAlignment="center"
            android:layout_marginEnd="10dp"
            android:text="Guardar" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linese"
        android:background="@color/blanco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linem"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="0dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Datos del usuario"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="1sp"
            android:layout_marginEnd="1sp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/darker_gray" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imgHombre"
                android:layout_width="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_height="250dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:srcCompat="@android:drawable/sym_def_app_icon" />

            <ImageButton
                android:id="@+id/imgMujer"
                android:layout_width="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_height="250dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:srcCompat="@android:drawable/sym_def_app_icon" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="3dp"
                    android:gravity="center|start"
                    android:text="¿Cuanto mides?"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/spinnerAltura"
                    android:spinnerMode="dialog"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="40dp" />


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
              android:layout_marginEnd="3dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="textStart"
                    android:gravity="center|start"
                    android:text="¿Cual es tu peso?"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/spinnerPeso"
                    android:spinnerMode="dialog"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="5dp"
                    android:layout_height="40dp" />


            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="3dp"
                android:gravity="center|start"
                android:text="¿Que estas buscando?"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/spinnerBuscando"
                android:spinnerMode="dialog"
                android:layout_width="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="10dp"
                android:layout_height="40dp" />


        </LinearLayout>


    </LinearLayout>



</RelativeLayout>