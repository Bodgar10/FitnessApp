<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Planes"
            android:textSize="20sp"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/txtNombrePlan"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Basico"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray" />


        <TextView
            android:id="@+id/txtOferta"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="La mas vendida"
            android:textSize="24sp"
            android:textColor="@android:color/black" />

    </LinearLayout>



        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:elevation="5dp"
            android:padding="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="5dp"
            android:orientation="vertical"
            android:background="@drawable/boton_redondo_blanco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtMeses"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:text="6 meses"
            android:layout_marginBottom="10dp"
            android:textSize="25sp"
            android:textColor="@android:color/darker_gray" />


        <TextView
            android:id="@+id/txtDescripcionM"
            android:gravity="center"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="10dp"
            android:text="Descripcion de lo que se vendera aqui y alla por todos los tiempos en el mejor plan que tiene esto y que sera para un uen siicula"
            android:textSize="15sp"
            android:textColor="@android:color/black" />


        <Button
            android:id="@+id/btnSeleccionar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Seleccionar"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="80dp"
            android:layout_marginStart="80dp"
            android:textSize="15sp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/boton_negro_redondo"
            android:textColor="@android:color/white"
            />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>